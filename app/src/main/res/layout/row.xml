<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">


    <RelativeLayout

        android:background="?android:selectableItemBackground"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="7dp">

        <ImageView
            android:id="@+id/bluetooth_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_laptop_black_24dp"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/name"
            android:text="@string/max_200_pt_speaker"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toLeftOf="@id/bluetooth_connection"
            android:layout_toRightOf="@id/bluetooth_type"

            android:layout_toStartOf="@id/bluetooth_connection"
            android:layout_toEndOf="@id/bluetooth_type"

            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/status"
            android:text="@string/pairing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toRightOf="@id/bluetooth_type"
            android:layout_toLeftOf="@id/bluetooth_connection"

            android:layout_below="@id/name"

            android:layout_toStartOf="@id/bluetooth_connection"
            android:layout_toEndOf="@id/bluetooth_type"

            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/bluetooth_connection"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</LinearLayout>